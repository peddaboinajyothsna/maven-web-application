pipeline{

agent any








tools{
maven "maven3.8.5"
}




stages{

    //Get the code from GitHub
    stage('CheckoutCode'){
	steps{
	    
	   git branch: 'development', changelog: false, credentialsId: '2aab337e-f1e0-455e-ac8a-ff7d77d04424', poll: false, url: 'https://github.com/peddaboinajyothsna/maven-web-application.git'
	}
  }
  //Do the build
  stage('Build'){
  steps{
  sh "mvn clean package"
  }
  }
  
//Execute SOnarQube Report
 stage('ExecuteSonarQubeReport'){
  steps{
  sh "mvn sonar:sonar"
  }
  }
  
  //Upload Artifacats into Nexus repo
  stage('UploadArtifactsintoNexus'){
  steps{
  sh "mvn deploy"
  }
  }
  
  //Deploy Application into Tomcat Server
  stage('DeployAppIntoTomcatServer'){
  steps{
  sshagent(['d329e5ad-b30f-4c1e-93e9-41f8150fc50a']) {
  sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@65.1.106.123:/opt/apache-tomcat-9.0.64/webapps/"
    }
    
    }
    
    
  }//stages closing




}//Pipeline closing






